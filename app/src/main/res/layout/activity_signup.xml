<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.seokyeong.the.sktt1intro.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/t1logo1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회원가입"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Sign up"
                        android:textSize="16sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/userIdEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_boader_white_round_box"
                        android:hint="아이디 입력"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="4dp"
                        android:background="#999999" />

                    <Button
                        android:id="@+id/idDuplChkBtn"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="6dp"
                        android:background="#FFFFFF"
                        android:text="중복확인" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="45dp">

                    <EditText
                        android:id="@+id/userNameEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_boader_white_round_box"
                        android:hint="이름 입력"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="13sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="45dp">

                    <EditText
                        android:id="@+id/pwEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_boader_white_round_box"
                        android:hint="비밀번호 입력      *6글자 이상 입력하셔야 합니다*"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:textSize="13sp" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="45dp">

                    <EditText
                        android:id="@+id/pwChkEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_boader_white_round_box"
                        android:hint="비밀번호 확인"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:textSize="13sp" />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="프로필 사진 선택" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/img1Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:checked="true"
                                android:text="1" />

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon1" />

                            <RadioButton
                                android:id="@+id/img2Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="2" />

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon2" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/img3Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="3" />

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon3" />

                            <RadioButton
                                android:id="@+id/img4Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="4" />

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon4" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/img5Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="5" />

                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon5" />

                            <RadioButton
                                android:id="@+id/img6Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="6" />

                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon6" />

                        </LinearLayout>


                    </RadioGroup>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="생년월일" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/selectBirthDayBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선택" />

                    <TextView
                        android:id="@+id/bitrhDayTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/gray_boader_gray_round_box"
                android:text="회 원 가 입"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>

