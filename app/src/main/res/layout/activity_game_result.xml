<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seokyeong.the.sktt1intro.GameResultActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="경기 이름이 출력됩니다."
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_boader_white_round_box"
            android:orientation="horizontal"
            android:padding="12dp"
            android:textSize="13sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="날짜" />

            <TextView

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="75dp"
                android:background="@color/blue_color" />

            <TextView
                android:id="@+id/gameDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2017 - 10 - 24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/gray_boader_white_round_box"
            android:orientation="horizontal"
            android:padding="12dp"
            android:textSize="13sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="시간" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="100dp"
                android:background="@color/blue_color"
                android:gravity="center" />


            <TextView
                android:id="@+id/gameTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 : 00" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/gray_boader_white_round_box"
            android:orientation="horizontal"
            android:padding="12dp"
            android:textSize="13sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="장소" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="55dp"
                android:background="@color/blue_color"
                android:gravity="center" />


            <TextView
                android:id="@+id/gameLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울 OGN e스타디움" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="세부 내용" />


    </LinearLayout>

    <TableLayout
        android:stretchColumns="*"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:background="#EEEEEE"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="　"
                android:textSize="18sp" />

            <TextView
                android:background="#EEEEEE"
                android:textStyle="bold"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SK텔레콤 T1"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/resultScoreSKTxt"
                android:background="#EEEEEE"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/winOrLoseTxt"
                android:background="#EEEEEE"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="승리"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/awayTeamScoreTxt"
                android:background="#EEEEEE"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/awayTeamName"
                android:background="#EEEEEE"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MVP"
                android:textSize="16sp" />
        </TableRow>

